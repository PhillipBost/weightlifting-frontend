/* Replace your current globals.css with this */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* ===========================================
   DARK THEME (Default) - Comfortable
   =========================================== */
:root,
:root[data-theme="dark"] {
  /* Background System - Warm, comfortable grays */
  --bg-primary: #111827;      /* gray-900 - main app background */
  --bg-secondary: #1f2937;    /* gray-800 - card backgrounds */
  --bg-tertiary: #374151;     /* gray-700 - interactive elements */
  --bg-surface: #4b5563;      /* gray-600 - elevated surfaces */
  --bg-hover: #6b7280;        /* gray-500 - hover states */
  
  /* Background Overlays */
  --bg-header: rgba(31, 41, 55, 0.8);     /* gray-800 with transparency */
  --bg-section: rgba(31, 41, 55, 0.5);    /* gray-800 lighter */
  --bg-backdrop: rgba(17, 24, 39, 0.8);   /* gray-900 backdrop */
  
  /* Text Hierarchy - Softer than pure white */
  --text-primary: #f9fafb;    /* gray-50 - headlines, emphasis */
  --text-secondary: #e5e7eb;  /* gray-200 - body text, navigation */
  --text-tertiary: #d1d5db;   /* gray-300 - labels, secondary info */
  --text-muted: #9ca3af;      /* gray-400 - placeholders, subtle text */
  --text-disabled: #6b7280;   /* gray-500 - disabled states */
  
  /* Border System */
  --border-primary: #4b5563;  /* gray-600 - main borders */
  --border-secondary: #374151;/* gray-700 - subtle borders */
  --border-focus: #3b82f6;    /* blue-500 - focus indicators */
  --border-hover: #6b7280;    /* gray-500 - hover borders */
  
  /* Interactive Colors - Comfortable, not harsh */
  --accent-primary: #3b82f6;       /* blue-500 - primary actions */
  --accent-primary-hover: #2563eb; /* blue-600 - primary hover */
  --accent-secondary: #6366f1;     /* indigo-500 - secondary actions */
  --accent-secondary-hover: #4f46e5; /* indigo-600 - secondary hover */
  
  /* Data Visualization - WCAG compliant but comfortable */
  --chart-snatch: #60a5fa;      /* blue-400 - softer than pure blue */
  --chart-cleanjerk: #34d399;   /* emerald-400 - easier on eyes */
  --chart-total: #fbbf24;       /* amber-400 - warm yellow */
  --chart-bodyweight: #f472b6;  /* pink-400 - pleasant pink */
  --chart-qpoints: #a78bfa;     /* violet-400 - soft purple */
  --chart-qyouth: #22d3ee;      /* cyan-400 - bright but not harsh */
  --chart-qmasters: #fb923c;    /* orange-400 - warm orange */
  --chart-failed: #f87171;      /* red-400 - clear but not alarming */
  
  /* Semantic Colors */
  --color-success: #10b981;     /* emerald-500 - good lifts */
  --color-warning: #f59e0b;     /* amber-500 - caution */
  --color-error: #ef4444;       /* red-500 - failed lifts */
  --color-info: #3b82f6;        /* blue-500 - information */
  
  /* Chart Interaction States */
  --chart-grid: #374151;        /* gray-700 - subtle grid lines */
  --chart-axis: #9ca3af;        /* gray-400 - axis labels */
  --chart-tooltip-bg: #1f2937;  /* gray-800 - tooltip background */
  --chart-tooltip-border: #4b5563; /* gray-600 - tooltip border */
}

/* ===========================================
   LIGHT THEME - Polished Professional
   =========================================== */
:root[data-theme="light"] {
  /* Background System - Softer hierarchy with subtle warmth */
  --bg-primary: #f8fafc;       /* slate-50 - softer than pure white */
  --bg-secondary: #ffffff;     /* pure white - cards pop against background */
  --bg-tertiary: #f1f5f9;      /* slate-100 - subtle interactive elements */
  --bg-surface: #e2e8f0;       /* slate-200 - clear elevation */
  --bg-hover: #cbd5e1;         /* slate-300 - visible hover states */
  
  /* Background Overlays - More defined layers */
  --bg-header: rgba(248, 250, 252, 0.95);  /* slate-50 with transparency */
  --bg-section: rgba(241, 245, 249, 0.8);  /* slate-100 lighter */
  --bg-backdrop: rgba(248, 250, 252, 0.9); /* slate-50 backdrop */
  
  /* Text Hierarchy - Warmer, softer blacks */
  --text-primary: #0f172a;     /* slate-900 - rich but not harsh black */
  --text-secondary: #334155;   /* slate-700 - readable body text */
  --text-tertiary: #64748b;    /* slate-500 - secondary info */
  --text-muted: #94a3b8;       /* slate-400 - subtle text */
  --text-disabled: #cbd5e1;    /* slate-300 - disabled states */
  
  /* Border System - Subtle but defined */
  --border-primary: #cbd5e1;   /* slate-300 - clear borders */
  --border-secondary: #e2e8f0; /* slate-200 - subtle borders */
  --border-focus: #3b82f6;     /* blue-500 - focus indicators */
  --border-hover: #94a3b8;     /* slate-400 - hover borders */
  
  /* Interactive Colors - Vibrant but comfortable */
  --accent-primary: #3b82f6;       /* blue-500 - primary actions */
  --accent-primary-hover: #2563eb; /* blue-600 - primary hover */
  --accent-secondary: #6366f1;     /* indigo-500 - secondary actions */
  --accent-secondary-hover: #4f46e5; /* indigo-600 - secondary hover */
  
  /* Data Visualization - Vibrant, high-contrast colors */
  --chart-snatch: #2563eb;      /* blue-600 - vibrant blue */
  --chart-cleanjerk: #16a34a;   /* green-600 - vibrant green */
  --chart-total: #ca8a04;       /* yellow-600 - vibrant yellow */
  --chart-bodyweight: #e11d48;  /* rose-600 - vibrant pink */
  --chart-qpoints: #9333ea;     /* violet-600 - vibrant purple */
  --chart-qyouth: #0284c7;      /* sky-600 - vibrant cyan */
  --chart-qmasters: #f97316;    /* orange-500 - vibrant orange */
  --chart-failed: #dc2626;      /* red-600 - clear red */
  
  /* Semantic Colors - Clear and distinct */
  --color-success: #16a34a;     /* green-600 - good lifts */
  --color-warning: #ca8a04;     /* yellow-600 - caution */
  --color-error: #dc2626;       /* red-600 - failed lifts */
  --color-info: #3b82f6;        /* blue-500 - information */
  
  /* Chart Interaction States - Better visibility */
  --chart-grid: #cbd5e1;        /* slate-300 - visible grid lines */
  --chart-axis: #475569;        /* slate-600 - readable axis labels */
  --chart-tooltip-bg: #ffffff;  /* white - tooltip background */
  --chart-tooltip-border: #94a3b8; /* slate-400 - visible tooltip border */
}

/* ===========================================
   HIGH CONTRAST THEME - Maximum Accessibility
   =========================================== */
:root[data-theme="high-contrast"] {
  /* Background System - Pure blacks and whites */
  --bg-primary: #000000;       /* pure black - main background */
  --bg-secondary: #1a1a1a;     /* dark gray - card backgrounds */
  --bg-tertiary: #333333;      /* medium gray - interactive elements */
  --bg-surface: #4d4d4d;       /* lighter gray - elevated surfaces */
  --bg-hover: #666666;         /* hover gray - hover states */
  
  /* Background Overlays */
  --bg-header: rgba(26, 26, 26, 0.95);    /* dark gray with transparency */
  --bg-section: rgba(26, 26, 26, 0.8);    /* dark gray lighter */
  --bg-backdrop: rgba(0, 0, 0, 0.9);      /* black backdrop */
  
  /* Text Hierarchy - Maximum contrast */
  --text-primary: #ffffff;     /* pure white - headlines, emphasis */
  --text-secondary: #e6e6e6;   /* light gray - body text, navigation */
  --text-tertiary: #cccccc;    /* medium gray - labels, secondary info */
  --text-muted: #999999;       /* darker gray - placeholders, subtle text */
  --text-disabled: #666666;    /* dark gray - disabled states */
  
  /* Border System - High contrast borders */
  --border-primary: #666666;   /* medium gray - main borders */
  --border-secondary: #4d4d4d; /* darker gray - subtle borders */
  --border-focus: #ffff00;     /* pure yellow - focus indicators */
  --border-hover: #808080;     /* light gray - hover borders */
  
  /* Interactive Colors - High contrast, distinct colors */
  --accent-primary: #0099ff;       /* bright blue - primary actions */
  --accent-primary-hover: #0077cc; /* darker blue - primary hover */
  --accent-secondary: #9966ff;     /* bright purple - secondary actions */
  --accent-secondary-hover: #7744cc; /* darker purple - secondary hover */
  
  /* Data Visualization - Maximum contrast, distinct hues */
  --chart-snatch: #0099ff;      /* pure bright blue */
  --chart-cleanjerk: #00ff00;   /* pure bright green */
  --chart-total: #ffff00;       /* pure yellow */
  --chart-bodyweight: #ff00ff;  /* pure magenta */
  --chart-qpoints: #9966ff;     /* bright purple */
  --chart-qyouth: #00ffff;      /* pure cyan */
  --chart-qmasters: #ff6600;    /* bright orange */
  --chart-failed: #ff0000;      /* pure red */
  
  /* Semantic Colors - Highly contrasted */
  --color-success: #00ff00;     /* pure green - good lifts */
  --color-warning: #ffff00;     /* pure yellow - caution */
  --color-error: #ff0000;       /* pure red - failed lifts */
  --color-info: #0099ff;        /* bright blue - information */
  
  /* Chart Interaction States - Maximum contrast */
  --chart-grid: #666666;        /* medium gray - much more visible */
  --chart-axis: #ffffff;        /* pure white - maximum contrast for axis labels */
  --chart-tooltip-bg: #1a1a1a;  /* dark gray - tooltip background */
  --chart-tooltip-border: #999999; /* light gray - highly visible tooltip border */
  
  /* Enhanced focus indicators for accessibility */
  --focus-ring-width: 3px;
  --focus-ring-color: #ffff00;
}

/* ===========================================
   BASE STYLES
   =========================================== */
body {
  background: var(--bg-primary);
  color: var(--text-secondary);
  font-family: var(--font-geist-sans), Arial, Helvetica, sans-serif;
  transition: background-color 0.3s ease, color 0.3s ease;
}

/* ===========================================
   COMPONENT UTILITY CLASSES
   =========================================== */
@layer components {
  /* Background Utilities */
  .bg-app-primary { background-color: var(--bg-primary); }
  .bg-app-secondary { background-color: var(--bg-secondary); }
  .bg-app-tertiary { background-color: var(--bg-tertiary); }
  .bg-app-surface { background-color: var(--bg-surface); }
  
  /* Text Utilities */
  .text-app-primary { color: var(--text-primary); }
  .text-app-secondary { color: var(--text-secondary); }
  .text-app-tertiary { color: var(--text-tertiary); }
  .text-app-muted { color: var(--text-muted); }
  
  /* Border Utilities */
  .border-app-primary { border-color: var(--border-primary); }
  .border-app-secondary { border-color: var(--border-secondary); }
  
  /* Interactive Utilities */
  .bg-accent-primary { background-color: var(--accent-primary); }
  .bg-accent-primary-hover:hover { background-color: var(--accent-primary-hover); }
  
  /* Common Component Patterns */
  .card-primary {
    background-color: var(--bg-secondary);
    border-radius: 1rem;
    padding: 2rem;
    border: 1px solid var(--border-primary);
    transition: background-color 0.3s ease, border-color 0.3s ease;

  /* Q-Score color utilities */
  .qpoints-color { color: var(--chart-qpoints); }
  .qyouth-color { color: var(--chart-qyouth); }
  .qmasters-color { color: var(--chart-qmasters); }
  }
  
  .card-secondary {
    background-color: var(--bg-secondary);
    border-radius: 0.75rem;
    padding: 1.5rem;
    border: 1px solid var(--border-primary);
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }
  
  .card-large {
    background-color: var(--bg-secondary);
    border-radius: 1rem;
    padding: 2rem;
    border: 1px solid var(--border-secondary);
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }
  
  .card-results {
    background-color: var(--bg-secondary);
    border-radius: 1rem;
    border: 1px solid var(--border-secondary);
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }
  
  .btn-primary {
    background-color: var(--accent-primary);
    color: var(--text-primary);
    padding: 0.5rem 1.5rem;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
  }
  
  .btn-primary:hover {
    background-color: var(--accent-primary-hover);
  }
  
  .btn-secondary {
    background-color: var(--bg-tertiary);
    color: var(--text-secondary);
    padding: 0.25rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    transition: all 0.3s ease;
  }
  
  .btn-secondary:hover {
    background-color: var(--bg-surface);
  }
  
  .btn-tertiary {
    background-color: var(--bg-surface);
    color: var(--text-secondary);
    padding: 0.25rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    transition: all 0.3s ease;
  }
  
  .btn-tertiary:hover {
    background-color: var(--bg-hover);
  }
  
  .input-primary {
    width: 100%;
    padding-left: 3rem;
    padding-right: 4rem;
    padding-top: 1rem;
    padding-bottom: 1rem;
    font-size: 1.125rem;
    background-color: var(--bg-tertiary);
    border: 2px solid var(--border-secondary);
    color: var(--text-primary);
    border-radius: 0.75rem;
    transition: all 0.3s ease;
  }
  
  .input-primary::placeholder {
    color: var(--text-muted);
  }
  
  .input-primary:focus {
    outline: none;
    border-color: var(--border-focus);
    box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
  }
  
  /* Enhanced focus for high contrast theme */
  :root[data-theme="high-contrast"] .input-primary:focus {
    box-shadow: 0 0 0 var(--focus-ring-width, 3px) var(--focus-ring-color, #ffff00);
  }
  
  /* Text utility variants */
  .text-heading {
    color: var(--text-primary);
    font-weight: 700;
  }
  
  .text-label {
    color: var(--text-tertiary);
    font-weight: 600;
  }
  
  /* Background/Surface patterns */
  .bg-interactive {
    background-color: var(--bg-tertiary);
    transition: background-color 0.3s ease;
  }
  
  .bg-interactive:hover {
    background-color: var(--bg-surface);
  }
  
  /* Chart container */
  .chart-container {
    background-color: var(--bg-secondary);
    border-radius: 1rem;
    padding: 1.5rem;
    border: 1px solid var(--border-secondary);
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }
  
  /* App-specific gradient backgrounds */
  .bg-app-gradient {
    background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
    transition: background 0.3s ease;
  }
  
  .bg-header-blur {
    background-color: var(--bg-header);
    backdrop-filter: blur(8px);
    transition: background-color 0.3s ease;
  }
}